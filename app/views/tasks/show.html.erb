<div class="container mt-5">
<h2><%= @task.title %></h2>

<div class="d-flex p-3 mb-3 bg-light">
<p><%= @task.details %></p>
</div>

<% if @task.completed %>
<i class="fa-regular fa-square-check"></i>This task is completed
<% else %>
<i class="fa-regular fa-square"></i>This task is not completed yet
<% end %>

<div class="d-flex flex-column mt-3">
<%= link_to 'Edit task', edit_task_path %>
<%= link_to 'Back to list', list_path %>
</div>
</div>
